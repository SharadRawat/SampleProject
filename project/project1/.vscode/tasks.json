{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build unit_tests",
            "type": "shell",
            "group": "build",
            "command": "bazel build -c dbg unit_tests",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative"
                ]
            }
        }
    ],
}